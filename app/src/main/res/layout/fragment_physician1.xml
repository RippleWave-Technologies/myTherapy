<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".R3_R8.PhysicianFragment1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/physician_constraintLayout_upper"
            android:layout_width="413dp"
            android:layout_height="200dp"
            android:background="@color/md_theme_light_surfaceVariant"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/physician_textView_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/company_name"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/physician_textView_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto"
                android:text="@string/welcome_message"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/physician_textView_company" />

            <TextView
                android:id="@+id/physician_textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/physician_textView_welcome" />

            <ImageView
                android:id="@+id/physician_imageView_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="@+id/physician_textView_company"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/physician_textView_company"
                app:srcCompat="@drawable/baseline_exit_to_app_24"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/physician_imageView_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="@+id/physician_textView_company"
                app:layout_constraintEnd_toStartOf="@+id/physician_imageView_exit"
                app:layout_constraintTop_toTopOf="@+id/physician_textView_company"
                app:srcCompat="@drawable/baseline_account_circle_24" />

            <ImageButton
                android:id="@+id/physician_imageButton_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_notifications_24"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="@+id/physician_textView_company"
                app:layout_constraintEnd_toStartOf="@+id/physician_imageView_account"
                app:layout_constraintTop_toTopOf="@+id/physician_textView_company" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>